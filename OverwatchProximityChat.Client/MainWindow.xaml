<Window x:Class="OverwatchProximityChat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverwatchProximityChat.Client"
        mc:Ignorable="d"
        Title="Overwatch Proximity Chat Client" Height="151" Width="197" Closing="Window_Closing">
    <Grid>
        <Label x:Name="linkCodeLabel" Content="Link Code:" HorizontalAlignment="Left" Margin="32,24,0,0" VerticalAlignment="Top" Height="26" Width="64"/>
        <TextBox x:Name="linkCodeTextBox" HorizontalAlignment="Left" Margin="32,55,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="18" CharacterCasing="Upper"/>
        <Button x:Name="connectButton" Content="Connect" HorizontalAlignment="Left" Margin="32,92,0,0" VerticalAlignment="Top" Click="connectButton_Click" Height="20" Width="120"/>
    </Grid>
</Window>
